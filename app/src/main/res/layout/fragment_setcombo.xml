<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="-54dp">

        <LinearLayout
            android:id="@+id/layoutScroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="                                                 Numhit"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButtonNumhit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/numhit" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="                                                 Supercombo"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButtonSuperCombo"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                app:srcCompat="@drawable/supercombo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="                                                 Setcombo"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButtonSetCombo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/setcombo" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>