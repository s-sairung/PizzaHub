<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="0dp" >

         <LinearLayout
             android:id="@+id/layoutScroll"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="vertical">

             <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:padding="10dp"
                 android:text="Pizzahub"
                 android:textStyle="bold" />

             <ImageButton
                 android:id="@+id/imageButtonFlash"
                 android:layout_width="match_parent"
                 android:layout_height="100dp"
                 app:srcCompat="@drawable/flashdeal" />
             <ImageButton
                 android:id="@+id/imageButtonSet"
                 android:layout_width="match_parent"
                 android:layout_height="208dp"
                 app:srcCompat="@drawable/setcombo" />
             <ImageButton
                 android:id="@+id/imageButtonPizza"
                 android:layout_width="match_parent"
                 android:layout_height="208dp"
                 app:srcCompat="@drawable/hawaiian" />

             <ImageButton
                 android:id="@+id/imageButtonOther"
                 android:layout_width="match_parent"
                 android:layout_height="222dp"
                 app:srcCompat="@drawable/chicken" />

         </LinearLayout>
     </ScrollView>
 </RelativeLayout>